<%= provide(:title, "Single Product") %>
  <!-- MAIN CONTENT SECTION -->
<section class="mainContent clearfix">
  <div class="container">
    <div class="row singleProduct">
      <div class="col-xs-12">
        <div class="media">
          <div class="media-left productSlider">
            <div id="carousel" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <% if @product_images.size > 1 %>
                  <% @product_images.each_index do |idx| %>
                    <div class="item <%= 'active' if idx == 0%>" data-thumb="<%= idx %>">
                      <%= image_tag @product_images[idx].attachment(:large), itemprop: 'image' %>
                    </div>
                  <% end %>
                <% else %>
                    <div class="item active" data-thumb="0">
                      <%= image_tag @product.display_image.attachment(:large), itemprop: 'image' %>
                    </div>
                <% end %>
              </div>
            </div>
            <div class="clearfix">
              <div id="thumbcarousel" class="carousel slide" data-interval="false">
                <div class="carousel-inner">
                  <% if @product_images.size > 1 %>
                    <% @product_images.each_index do |idx| %>
                      <div data-target="#carousel" data-slide-to="<%= idx %>" class="thumb" id="show-product-thumb">
                        <%= link_to(image_tag(@product_images[idx].attachment.url(:product)), @product_images[idx].attachment.url(:product)) %>
                      </div>
                    <% end %>
                  <% else %>
                    <div data-target="#carousel" data-slide-to="0" class="thumb" id="show-product-thumb">
                      <%= image_tag @product.display_image.attachment.url(:product) %>
                    </div>
                  <% end %>
                </div>
                <a class="left carousel-control" href="#thumbcarousel" role="button" data-slide="prev">
                  <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#thumbcarousel" role="button" data-slide="next">
                  <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
              </div>
            </div>
          </div>
          <div class="media-body">
            <ul class="list-inline">
              <li><a href="product_grid_left_sidebar.html"><i class="fa fa-reply" aria-hidden="true"></i>一覧ページへ戻る</a></li>
              <!-- <li><a href="#"><i class="fa fa-plus" aria-hidden="true"></i>Share This</a></li> -->
            </ul>
            <h2><%= @product.name %></h2>
            <h3>$<%= @product.price %></h3>
            <p><%= product_description(@product) %></p>
            <% if @product.has_variants? %>
              <% @product.variant_option_values_by_option_type.each_value do |values| %>
                <span class="quick-drop">
                  <select name="guiest_id3" id="guiest_id3" class="select-drop">
                    <% values.each_with_index do |value, index| %>
                      <option value="<%= index %>"><%=  value.presentation %></option>
                    <% end %>
                  </select>
                </span>
              <% end %>
            <% end %>
            <span class="quick-drop resizeWidth">
              <select name="guiest_id4" id="guiest_id4" class="select-drop">
              <!--   <option value="0">Qty</option> -->
                <% (1..4).each do |number| %>
                  <option value="<%= number %>"><%= number %></option>
                <% end %>
              </select>
            </span>
            <div class="btn-area">
              <a href="cart_page.html" class="btn btn-primary btn-block">カートへ入れる<i class="fa fa-angle-right" aria-hidden="true"></i></a>
