<%= provide(:header_title, "お届け先情報") %>
<!-- MAIN CONTENT SECTION -->
<section class="mainContent clearfix stepsWrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="innerWrapper clearfix stepsPage">
          <div class="row progress-wizard" style="border-bottom:0;">
            <div class="col-xs-4 progress-wizard-step complete">
              <div class="text-center progress-wizard-stepnum">お届け先情報</div>
              <div class="progress"><div class="progress-bar"></div></div>
              <i class="progress-wizard-dot"></i>
            </div>
            <div class="col-xs-4 progress-wizard-step disabled">
              <div class="text-center progress-wizard-stepnum">お支払い方法</div>
              <div class="progress"><div class="progress-bar"></div></div>
              <i class="progress-wizard-dot"></i>
            </div>
            <div class="col-xs-4 progress-wizard-step disabled">
              <div class="text-center progress-wizard-stepnum">入力内容確認</div>
              <div class="progress"><div class="progress-bar"></div></div>
              <i class="progress-wizard-dot"></i>
            </div>
          </div>
          <%= form_for @order, url: potepan_update_checkout_path(@order.state), html: { class: "row", role: "form", id: "checkout_form_address" } do |order_form| %>
            <div class="col-xs-12">
              <%= render 'shared/error_messages', object: order_form.object %>
              <div class="page-header">
                <h4>入力フォーム</h4>
              </div>
            </div>
            <%= order_form.fields_for :ship_address do |ship_form| %>
              <div class="form-group col-sm-6 col-xs-12">
                <%= label_tag 'checkout-family-name', '姓' %>
                <%= ship_form.text_field :lastname, id: "checkout-family-name", class: "form-control" %>
              </div>
              <div class="form-group col-sm-6 col-xs-12">
                <%= label_tag 'checkout-first-name', '名' %>
                <%= ship_form.text_field :firstname, id: "checkout-first-name", class: "form-control" %>
              </div>
              <div class="form-group col-sm-6 col-xs-12 in-two-column">
                <div class="one-column">
                  <%= label_tag 'checkout-email', 'メールアドレス' %>
                  <%= order_form.email_field :email, value: @order.user.email, id: "checkout-email", class: "form-control" %>
                </div>
                <div class="two-column">
                  <%= label_tag 'checkout-telephone', '電話番号' %>
                  <%= ship_form.telephone_field :phone, id: "checkout-telephone", class: "form-control", pattern: "[0-9]{2,3}-[0-9]{3,4}-[0-9]{4,5}", title: "電話番号は、ハイフン（-）を入れて記入してください。"%>
                </div>
              </div>
              <div class="form-group col-sm-6 col-xs-12 in-two-column">
                <div class="one-column">
                  <%= label_tag 'checkout-zipcode', '郵便番号' %>
                  <%= ship_form.telephone_field :zipcode, id: "checkout-zipcode", class: "form-control", pattern: "[0-9]{3}-[0-9]{4}", title: "郵便番号は、ハイフン（-）を入れて記入してください。", maxlength: 8 %>
                </div>
                <div class="two-column">
                  <%= label_tag 'order_ship_address_attributes_country_id', '国' %>
                  <%= ship_form.collection_select :country_id, Spree::Country.all, :id, :name, { id: "checkout-country", class: "form-control" } %>
                </div>
              </div>
              <div class="form-group col-sm-6 col-xs-12 in-two-column">
                <div class="one-column">
                  <%= label_tag 'order_ship_address_attributes_state_id', '都道府県' %>
                  <%= ship_form.collection_select :state_id, Spree::State.all, :id, :name, { id: "checkout-country", class: "form-control" } %>
                </div>
                <div class="two-column">
                  <%= label_tag 'checkout-city', '市' %>
                  <%= ship_form.text_field :city, class: "form-control", id: "checkout-city" %>
                </div>
              </div>
              <div class="form-group col-sm-6 col-xs-12">
                <%= label_tag 'checkout-address', '住所' %>
                <%= ship_form.text_field :address1, class: "form-control", id: "checkout-address" %>
              </div>
              <div class="col-xs-12">
                <div class="well well-lg clearfix cartListInner">
                  <ul class="pager checkBtnArea address-button">
                    <li class="previous"><%= link_to "back", potepan_cart_path %></li>
                    <li class="next"><%= button_tag "次へ", class: "btn btn-primary btn-block", aria: { hidden: true } %></li>
                  </ul>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
