<div class="col-md-3 col-sm-4 col-xs-12 sideBar">
  <div class="panel panel-default">
    <div class="panel-heading">商品カテゴリー</div>
    <div class="panel-body">
      <div class="collapse navbar-side-collapse">
        <%= taxons_list(taxonomies) %>
      </div>
    </div>
  </div>
  <div class="panel panel-default filterNormal">
    <div class="panel-heading">色から探す</div>
    <div class="panel-body">
      <ul class="list-unstyled">
        <% option_type.value_name("Color").each do |color| %>
          <li>
            <%= link_to potepan_category_path(color: color) do %>
              <%= color %>
              <%= tag.span "(#{ProductSearchForm.new(taxon: filter_taxon, color: color).search.unscope(:includes, :order).size.length})" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="panel panel-default filterNormal">
    <div class="panel-heading">サイズから探す</div>
    <div class="panel-body">
      <ul class="list-unstyled clearfix">
        <% option_type.value_name("Size").each do |size| %>
          <li>
            <%= link_to potepan_category_path(size: size) do %>
              <%= size %>
              <%= tag.span "(#{ProductSearchForm.new(taxon: filter_taxon, size: size).search.unscope(:includes, :order).size.length})" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
