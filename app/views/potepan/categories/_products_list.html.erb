<% products.each do |product| %>
  <div class="col-sm-4 col-xs-12 product-display">
    <div class="productBox" id="<%= product.id %>">
      <%= link_to potepan_product_path(product) do %>
        <div class="productImage clearfix">
          <%= image_tag product.display_image.attachment.url(:product), alt: 'products-img' %>
        </div>
        <div class="productCaption clearfix">
          <h5><%= product.name %></h5>
          <h3><%= product.display_price %></h3>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
